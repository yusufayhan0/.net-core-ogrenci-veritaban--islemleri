@model FirstProject.Models.ogrenciler
@{
    ViewData["Title"] = "Kayıt Ekle";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Yeni Kayıt</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Ad</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ad, new { htmlAttributes = new { @class = "form-control col-md-5" } })
            </div>
            <label class="control-label col-md-2">Soyad</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.soyad, new { htmlAttributes = new { @class = "form-control col-md-5" } })
            </div>
            <label class="control-label col-md-2">No</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.no, new { htmlAttributes = new { @class = "form-control col-md-5" } })
            </div>
            
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Oluştur" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Geri Dön", "Index")
</div>